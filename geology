<script>
function checkAnswer(questionIndex, correctAnswer) {
    const questionDiv = document.querySelectorAll('.question')[questionIndex];
    const selectedOption = questionDiv.querySelector('input[name="q' + questionIndex + '"]:checked');
    const feedback = questionDiv.querySelector('.feedback');

    if (selectedOption) {
        if (selectedOption.value === correctAnswer) {
            feedback.innerHTML = "<span class='correct'>Верно!</span>";
        } else {
            feedback.innerHTML = "<span class='incorrect'>Неверно! Правильный ответ: " + correctAnswer + "</span>";
        }
    } else {
        feedback.innerHTML = "<span class='incorrect'>Ответ не выбран. Правильный ответ: " + correctAnswer + "</span>";
    }
}
</script>
</body>
</html>
